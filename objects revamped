var MOVE_SPEED;
	var enemies = [];
	var turrets = [];
	
	var ENEMY_DAMAGE;
	var TURRET_DAMAGE;
	var HIT_POINTS;
	var isDead = false; 
	var TURRET_HITPOINTS;
	
	
	function Enemy(type, id){
		var _id = id;
		var hp = HIT_POINTS;
		var movementSpeed = MOVE_SPEED;
		var damage = ENEMY_DAMAGE;
		
		
		this.id = function(){return _id;};
	}
	
	function Turret(type, id){
	  var _id = id;
	  var hp = TURRET_HITPOINTS;
	  var damage = TURRET_DAMAGE;
	  this.id = function (){return _id;};
		
	}
	
	
	function Dead()
	{
		
		if (hp <= 0)
		{
			
			isDead == true;
			
		}
		return isDead;
	}
	
	
	
	
	
